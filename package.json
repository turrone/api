{
  "name": "@turrone/api",
  "version": "0.1.0",
  "description": "REST API endpoints for powering Turrone Server",
  "main": "index.js",
  "scripts": {
    "coverage": "nyc report --reporter=json && codecov -f coverage/coverage-final.json",
    "doc": "npm run doc:api && npm run doc:dev",
    "doc:api": "apidoc -i src/api/ -o doc/api/",
    "doc:dev": "documentation build src/** -f html -o doc/dev/ --github",
    "test": "nyc mocha --exit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix",
        "git add"
      ],
      "*.{json,md,yml}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "apidoc": {
    "title": "Turrone Server REST API Endpoint Documentation",
    "sampleUrl": "http://localhost:8080"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/turrone/api.git"
  },
  "keywords": [
    "Turrone",
    "NuGet",
    "Chocolatey"
  ],
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/turrone/api/issues"
  },
  "homepage": "https://github.com/turrone/api#readme",
  "devDependencies": {
    "apidoc": "^0.17.7",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "codecov": "^3.1.0",
    "documentation": "^9.1.1",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^3.6.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "prettier": "^1.16.0"
  },
  "dependencies": {
    "express": "^4.16.4"
  }
}
