{
  "name": "@turrone/api",
  "version": "0.1.0",
  "description": "REST API endpoints for powering Turrone Server",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:clean && npm run build:ts",
    "build:clean": "del-cli dist/**",
    "build:ts": "tsc",
    "coverage": "nyc report --reporter=json && codecov -f coverage/coverage-final.json",
    "doc": "npm run doc:api && npm run doc:dev",
    "doc:api": "apidoc -i src/ -o doc/api/",
    "doc:dev": "typedoc --out doc/dev/ src/",
    "postinstall": "npm run build",
    "start": "node index.js",
    "test": "nyc mocha --exit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --max-warnings=0",
      "git add"
    ],
    "*.{json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "apidoc": {
    "title": "Turrone Server REST API Endpoint Documentation",
    "sampleUrl": "http://localhost:8080"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings"
    ],
    "extension": [
      ".ts"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/turrone/api.git"
  },
  "keywords": [
    "Turrone",
    "NuGet",
    "Chocolatey"
  ],
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/turrone/api/issues"
  },
  "homepage": "https://github.com/turrone/api#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/config": "0.0.34",
    "@types/express": "^4.17.0",
    "@types/hapi__joi": "^15.0.2",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.9",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "acorn": "^6.2.0",
    "apidoc": "^0.17.7",
    "chai": "^4.2.0",
    "chai-fs": "^2.0.0",
    "chai-http": "^4.3.0",
    "codecov": "^3.5.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.0",
    "lint-staged": "^9.2.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0",
    "typedoc": "^0.14.2"
  },
  "dependencies": {
    "@hapi/joi": "^15.1.0",
    "config": "^3.2.1",
    "del-cli": "^2.0.0",
    "express": "^4.17.1",
    "mongoose": "^5.6.5",
    "typescript": "^3.5.3"
  }
}
